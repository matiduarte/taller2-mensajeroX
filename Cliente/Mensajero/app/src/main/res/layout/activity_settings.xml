<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dk.mensajero.Activities.SettingsActivity" >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InformaciÃ³n"
        android:id="@+id/boton_Informacion"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:onClick="showInformation"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Perfil"
        android:id="@+id/boton_perfilUsuario"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:textStyle="bold"
        android:onClick="showProfileConfiguration"
        android:layout_below="@+id/boton_Informacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversaciones"
        android:id="@+id/boton_conversations"
        android:layout_below="@+id/boton_Informacion"
        android:layout_centerHorizontal="true"
        android:onClick="showConversations" />

</RelativeLayout>
