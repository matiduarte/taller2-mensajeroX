<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_editProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.dk.mensajero.Activities.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:onClick="selectPicture"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/profile_default" />

        <TextView
            android:id="@+id/textView_editNameAndPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/textEdit_Activity_profile" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.2dip"
                android:background="#849b87"
                android:id="@+id/profile_nameBar"
                android:layout_below="@+id/profileUserName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/profileUserName"
                android:divider="#000000"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/textView_name"
                android:layout_alignLeft="@+id/textView_name"
                android:layout_alignStart="@+id/textView_name" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_state"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/profileUserState"
                android:onClick="changeState"
                android:background="#FFFFFF"
                android:layout_below="@+id/textView_state"
                android:layout_alignLeft="@+id/textView_state"
                android:layout_alignStart="@+id/textView_state" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.2dip"
                android:background="#849b87"
                android:id="@+id/profile_stateBar"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/profileUserState"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_save_button"
                android:id="@+id/button"
                android:layout_centerVertical="true"
                android:onClick="saveProfile"
                android:background="#FFFFFF"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>