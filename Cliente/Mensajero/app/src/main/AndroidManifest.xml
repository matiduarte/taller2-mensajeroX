<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dk.mensajero" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrarUsuarioActivity"
            android:label="@string/title_activity_registrar_usuario"
            android:windowSoftInputMode="adjustNothing" >
            <intent-filter>
                <action android:name="com.dk.mensajero.RegistrarUsuarioActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmarDatosActivity"
            android:label="@string/title_activity_confirmar_datos" >
            <intent-filter>
                <action android:name="com.dk.mensajero.ConfirmarDatosActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AjustesActivity"
            android:label="@string/title_activity_ajustes" >
            <intent-filter>
                <action android:name="com.dk.mensajero.AjustesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InformacionActivity"
            android:label="@string/title_activity_informacion"
            android:parentActivityName="com.dk.mensajero.AjustesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dk.mensajero.AjustesActivity" />
        </activity>
    </application>

</manifest>
